<div class=''>
<% if current_user.admin? %>
<h4><%= _("Merge Articles") %></h4>
  <%= form_tag merge_with_path(id), :method => :post do %>
    <%= label_tag :merge_with, 'Article ID' %>
    <%= text_field_tag :merge_with %>
    <%= hidden_field_tag :id, id %>
    <%= submit_tag 'Merge' %>
  <% end %>
<% end %>
</div>